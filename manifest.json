{
  "manifest_version": 3,
  "name": "Selectable URL Shortener (is.gd)",
  "version": "2.0",
  "description": "現在のページまたは任意のURLを短縮してコピーします。",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://is.gd/*"
  ],
  "icons": {
    "1": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "URL短縮メニュー",
    "default_icon": {
      "1": "icon.png"
    }
  }
}